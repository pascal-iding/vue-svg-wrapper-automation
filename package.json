{
  "name": "vue-svg-wrapper-automation",
  "displayName": "Vue svg wrapper automation",
  "description": "Create a vue svg wrapper from your clipboard.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.vue",
    "onLanguage:vue"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vueSvgWrapper.svgToVue",
        "title": "Generate vue component from svg"
      }
    ],
    "configuration": {
      "title": "Vue SVG Wrapper Automation",
      "properties": {
        "vueSvgWrapper.defaultDirectory": {
          "type": "string",
          "default": "",
          "description": "The .vue file will be generated inside this directory. The workspace root is used by default (Empty value). You can set a path relative to your workspace root (eg. assets/icons/)."
        },
        "vueSvgWrapper.useCompositionApi": {
          "type": "boolean",
          "default": true,
          "description": "Will generate a composition api or options api component."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
